@model PizzaShop.Core.ViewModels.Ingredients.CreateViewModel

@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Ingredient";

}


<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Ingredients</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" required placeholder="Enter ingredient name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="createbtn" />
            </div>
        </div>
    </div>
</form>