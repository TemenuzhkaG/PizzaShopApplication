@model PizzaShop.Core.ViewModels.PizzaIngredients.CreateViewModel

@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create pizza ingredients";

}


<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>PizzaIngredients</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.PizzaId, htmlAttributes: new { @style = "control-label col-md-2" })

                <select name="PizzaId">
                    @foreach (var item in Model.Pizzas)
                    {
                        <option value="@item.Id">
                            @item.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.IngredientId, htmlAttributes: new { @style = "control-label col-md-2" })

                <select name="IngredientId">
                    @foreach (var item in Model.Ingredients)
                    {
                        <option value="@item.Id">
                            @item.Name
                        </option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="createbtn" />
            </div>
        </div>
    </div>
</form>
