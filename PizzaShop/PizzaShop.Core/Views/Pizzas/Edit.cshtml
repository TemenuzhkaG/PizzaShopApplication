
@model PizzaShop.Core.ViewModels.Pizzas.EditViewModel
@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["title"] = "Edit Pizza";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-horizontal">
        <h4>Pizza</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                @Html.ValidationMessageFor(x => x.Name)
                @Html.LabelFor(x => x.Name)
                <input type="text" placeholder="Enter pizza name" name="name" required value="@Html.DisplayFor(x => x.Name, new { @class = "control-label col-md-2" })">

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.ValidationMessageFor(x => x.Description)
                @Html.LabelFor(x => x.Description)
                <input type="text" placeholder="Enter description" name="description" required value="@Html.DisplayFor(x => x.Description, new { @class = "control-label col-md-2" })">

            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.ValidationMessageFor(x => x.Price)
                @Html.LabelFor(x => x.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" min="0.00" max="10000.00" step="0.01" placeholder="Enter price" name="price" required value="@Html.DisplayFor(x => x.Price, new { @class = "control-label col-md-2" })">

            </div>
        </div>

        <div class="form-group">

            <div class="col-md-10">
                @Html.ValidationMessageFor(x => x.ImageUrl)
                @Html.LabelFor(x => x.ImageUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                <input type="text" placeholder="Enter imageUrl" name="imageUrl" required value="@Html.DisplayFor(x => x.ImageUrl, new { @class = "control-label col-md-2" })">

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(x => x.CategoryId, htmlAttributes: new { @class = "control-label col-md-2" })

                <select name="CategoryId">
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.Id">
                            @item.Name
                        </option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="createbtn" />
            </div>
        </div>
    </div>
}
